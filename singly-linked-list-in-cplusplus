#include <cstdlib>
#include <iostream>

using namespace std;

struct node{
       int data;
       node *next;
       };

int main(int argc, char *argv[])
{
    node *root;
    node *conductor;
    
    root = new node;
    root->next = NULL;
    root->data = 1;
    conductor=root;
    if (conductor!=NULL){
       while (conductor->next!=NULL){
             conductor = conductor->next;
             cout<<conductor->data;
             }           
                 }
    conductor = new node;
    conductor=conductor->next;
    conductor->next = NULL;
    conductor->data=43;
                    
    system("PAUSE");
    return EXIT_SUCCESS;
}
